<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59C8FFC8"
    tools:context=".ui.home.HomeFragment"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/listTaskView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <ImageView
        android:id="@+id/emptyListHome"
        android:layout_width="155dp"
        android:layout_height="216dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/listTaskView"
        app:layout_constraintEnd_toEndOf="@+id/listTaskView"
        app:layout_constraintStart_toStartOf="@+id/listTaskView"
        app:layout_constraintTop_toTopOf="@+id/listTaskView"
        app:srcCompat="@drawable/ic_baseline_done_all_24" />
</androidx.constraintlayout.widget.ConstraintLayout>
